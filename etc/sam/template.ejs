AWSTemplateFormatVersion: '2010-09-09'
Transform: 'AWS::Serverless-2016-10-31'
Description: Metrics DB Logs to Glacier
Resources:
  Audit:
    Type: 'AWS::Serverless::Function'
    Properties:
      Handler: index.lambda
      Runtime: nodejs8.10
      CodeUri: <%- buildPath %>
      Description: >-
        metrics-audit
      MemorySize: 512
      Timeout: 300
      Policies:
        - Version: '2012-10-17'
          Statement:
            - Effect: Allow
              Action:
                - rds:DescribeDBLogFiles
                - rds:DownloadDBLogFilePortion
                - rds:DownloadCompleteLogFile
                - rds:DescribeDBInstances
              Resource: <%- DB_INSTANCE_ARN %>
        - Version: '2012-10-17'
          Statement:
            - Effect: Allow
              Action:
                - glacier:UploadArchive
                - glacier:InitiateMultipartUpload
                - glacier:CompleteMultipartUpload
                - glacier:UploadMultipartPart
              Resource: <%- GLACIER_VAULT_ARN %>
      Events:
        Schedule:
          Type: Schedule
          Properties:
            Schedule: rate(1 hours)
      Environment:
        Variables:
          DB_INSTANCE_IDENTIFIER: <%- DB_INSTANCE_IDENTIFIER %>
          GLACIER_VAULT_NAME: <%- GLACIER_VAULT_NAME %>
          AD_AWS_REGION: <%- AD_AWS_REGION %>
          DEBUG: '@agilemd/pg-audit-lambda*'
